{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opsconductor.local/schemas/topology_patch.schema.json",
  "title": "Topology Patch",
  "type": "object",
  "required": ["patch", "rationale"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool", "arguments"],
        "properties": {
          "tool": {
            "type": "string",
            "enum": ["infer_device_positions"]
          },
          "arguments": {
            "type": "object"
          }
        }
      }
    },
    "patch": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["op", "path"],
        "additionalProperties": false,
        "properties": {
          "op": {
            "type": "string",
            "enum": ["add", "remove", "replace"]
          },
          "path": {
            "type": "string",
            "description": "JSON Pointer path; nodes live at /nodes/{ip}, edges at /edges/{index}",
            "pattern": "^/(nodes|edges)(/[A-Za-z0-9_:.%-]+|/[0-9]+)?(/[A-Za-z0-9_-]+)?$"
          },
          "value": {
            "description": "Required for add/replace. Node or Edge objects; primitives only for leaf updates.",
            "oneOf": [
              { "$ref": "#/$defs/Node" },
              { "$ref": "#/$defs/Edge" },
              { "type": "string" },
              { "type": "number" },
              { "type": "integer" },
              { "type": "boolean" },
              { "type": "null" },
              {
                "type": "array",
                "items": { "type": ["string", "number", "boolean", "null"] }
              },
              {
                "type": "object",
                "additionalProperties": { "type": ["string", "number", "boolean", "null"] }
              }
            ]
          }
        },
        "allOf": [
          {
            "if": { "properties": { "op": { "const": "remove" } } },
            "then": { "not": { "required": ["value"] } }
          },
          {
            "if": { "properties": { "op": { "enum": ["add", "replace"] } } },
            "then": { "required": ["value"] }
          }
        ]
      }
    },
    "rationale": {
      "type": "string",
      "minLength": 1,
      "description": "Short explanation of why these edits are being made."
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "$defs": {
    "IP": {
      "type": "string",
      "description": "IPv4 or IPv6 textual form",
      "pattern": "^(?:((25[0-5]|2[0-4]\\d|[01]?\\d?\\d)(\\.(?!$)|$)){4}|([0-9A-Fa-f]{1,4}(:|$)){2,7}[0-9A-Fa-f]{0,4})$"
    },
    "Node": {
      "type": "object",
      "required": ["ip"],
      "additionalProperties": false,
      "properties": {
        "ip": { "$ref": "#/$defs/IP" },
        "kind": {
          "type": "string",
          "enum": ["host", "gateway", "firewall", "router", "server", "switch", "internet", "unknown"],
          "default": "unknown"
        },
        "role": { "type": "string" },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "last_seen": { "type": "string", "format": "date-time" },
        "position": {
          "type": "object",
          "properties": {
            "layer": {
              "type": "string",
              "enum": ["core", "distribution", "access", "edge", "unknown"]
            },
            "confidence": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            },
            "reasoning": { "type": "string" }
          }
        },
        "switch_probability": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            },
            "classification": {
              "type": "string",
              "enum": ["almost_certainly_switch", "likely_switch", "possible_switch", "unlikely_switch", "not_switch"]
            },
            "evidence": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "Edge": {
      "type": "object",
      "required": ["src", "dst", "type", "confidence", "evidence"],
      "additionalProperties": false,
      "properties": {
        "src": { "$ref": "#/$defs/IP" },
        "dst": { "$ref": "#/$defs/IP" },
        "type": {
          "type": "string",
          "enum": ["inferred_l3", "inferred_l2", "arp", "nat_hypothesis", "unknown"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "evidence": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" },
          "description": "IDs like t17#flows[3] that justify this edge."
        },
        "notes": { "type": "string" }
      }
    }
  }
}
