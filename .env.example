# OpsConductor NMS Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
# Default is set in docker-compose.yml
DATABASE_URL=postgresql://opsconductor:opsconductor@postgres:5432/opsconductor

# ============================================================================
# Network Discovery Configuration
# ============================================================================

# Networks to discover (comma-separated CIDR notation)
# Examples: 10.120.0.0/24,192.168.1.0/24,172.16.0.0/16
DISCOVERY_NETWORKS=10.120.0.0/24

# SNMP community string for device queries
SNMP_COMMUNITY=public

# SNMP timeout in seconds
SNMP_TIMEOUT=5

# SNMP retries
SNMP_RETRIES=2

# ============================================================================
# API Configuration
# ============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Log level for services
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================================
# UI Configuration
# ============================================================================

# API base URL for the UI
# Update this if accessing from a different machine
# Format: http://hostname:port (no trailing slash)
VITE_API_BASE=http://localhost:8000

# ============================================================================
# Development & Debugging
# ============================================================================

# Enable debug mode (shows additional logs)
DEBUG=false

# Enable SQL query logging
# SQL_ECHO=true
